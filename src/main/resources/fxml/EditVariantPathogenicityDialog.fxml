<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="dialogContainer" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="5.0">
         <children>
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <HBox styleClass="module-box-header">
                           <children>
                              <Label text="%editpathogenicitydialog.lb.pathogenicity" />
                           </children>
                        </HBox>
                        <ListView fx:id="acmgLv" prefHeight="250.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox styleClass="module-box-header">
                           <children>
                              <Label text="%editpathogenicitydialog.lb.comment" />
                           </children>
                        </HBox>
                        <TextArea fx:id="commentaryTa" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="updatePathogenicityBtn" defaultButton="true" mnemonicParsing="false" onAction="#editPathogenicity" text="%editpathogenicitydialog.btn.editpathogenicity" />
               </children>
            </HBox>
         </children>
         <styleClass>
            <String fx:value="module-box" />
            <String fx:value="module-box-container" />
         </styleClass>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label text="%editpathogenicitydialog.lb.history" />
               </children>
            </HBox>
            <TableView fx:id="historyTable">
              <columns>
                <TableColumn fx:id="pathogenicityCol" prefWidth="150.0" sortable="false" text="%editpathogenicitydialog.col.pathogenicity" />
                <TableColumn fx:id="userCol" prefWidth="120.0" sortable="false" text="%editpathogenicitydialog.col.username" />
                  <TableColumn fx:id="dateCol" prefWidth="150.0" sortable="false" text="%editpathogenicitydialog.col.date" />
                  <TableColumn fx:id="verifiedUserCol" prefWidth="120.0" sortable="false" text="%editpathogenicitydialog.col.validationusername" />
                  <TableColumn fx:id="verifiedDateCol" prefWidth="150.0" sortable="false" text="%editpathogenicitydialog.col.validationdate" />
                  <TableColumn fx:id="commentaryCol" prefWidth="300.0" sortable="false" text="%editpathogenicitydialog.col.comment" />
                  <TableColumn fx:id="actionsCol" prefWidth="180.0" />
              </columns>
            </TableView>
         </children>
         <styleClass>
            <String fx:value="module-box" />
            <String fx:value="module-box-container" />
         </styleClass>
      </VBox>
   </children>
</VBox>
