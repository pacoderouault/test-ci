<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ngsdiaglim.controllers.AppController">
   <children>
      <StackPane fx:id="stackpane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane style="-fx-background-color: #f4f4f4;">
               <children>
                  <HBox id="app-menu-bar" alignment="CENTER_LEFT" maxHeight="40.0" minHeight="40.0" prefHeight="40.0" spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" styleClass="module-title-box">
                           <children>
                              <Label fx:id="logoLb" onMouseClicked="#showHomeView" styleClass="logo" />
                              <Button graphicTextGap="0.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showHomeView">
                                 <graphic>
                                    <FontIcon iconLiteral="mdal-home" />
                                 </graphic>
                              </Button>
                              <Label text="&gt;" />
                              <Label fx:id="moduleName" styleClass="module-title" text="module title" />
                           </children>
                        </HBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#showSearchAnalysesDialog" text="%menu.searchAnalyses" />
                        <Button fx:id="genePanelsBtn" mnemonicParsing="false" onAction="#showManageGenePanelsView" text="%menu.genepanels" />
                        <SplitMenuButton fx:id="adminMenu" mnemonicParsing="false" onAction="#showUsersManageView" text="%menu.adminmenu">
                          <items>
                            <MenuItem fx:id="userManagementMenuItem" mnemonicParsing="false" onAction="#showUsersManageView" text="%menu.adminmenu.manageusers" />
                              <MenuItem fx:id="analysisParametersManagementMenuItem" mnemonicParsing="false" onAction="#showCreateAnalysisParametersView" text="%menu.adminmenu.createanalysis" />
                              <MenuItem fx:id="cnvsManagementMenuItem" mnemonicParsing="false" onAction="#showCNVsParametersView" text="%menu.adminmenu.cnvparameters" />
                          </items>
                        </SplitMenuButton>
                        <SplitMenuButton fx:id="userMenu" mnemonicParsing="false" onAction="#showAccountView" styleClass="transparent" text="SplitMenuButton">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#showAccountView" text="%menu.usermenu.account" />
                            <MenuItem mnemonicParsing="false" onAction="#disconnect" text="%menu.usermenu.disconnect" />
                          </items>
                        </SplitMenuButton>
                        <SplitMenuButton mnemonicParsing="false" text="%menu.helpmenu">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Action 1" />
                            <MenuItem mnemonicParsing="false" text="Action 2" />
                          </items>
                        </SplitMenuButton>
                     </children>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </HBox>
                  <AnchorPane id="app-module-container" fx:id="moduleContainer" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding></AnchorPane>
               </children></AnchorPane>
         </children>
      </StackPane>
   </children>
</AnchorPane>
