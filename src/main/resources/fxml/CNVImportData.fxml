         <children>
            <Label text="%cnv.importdata.lb.algorithm" />
         </children>
      </HBox>
      <VBox styleClass="module-box-container" VBox.vgrow="ALWAYS">
         <children>
            <TabPane fx:id="algoTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
              <tabs>
                <Tab fx:id="ampliconTab" text="%cnv.importdata.lb.algorithm.covcopamplicon">
                  <content>
                        <HBox alignment="TOP_CENTER">
                           <children>
                              <GridPane hgap="5.0" vgap="5.0">
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                                </rowConstraints>
                                 <children>
                                    <Label text="%cnv.importdata.amplicon.lb.panel" />
                                    <ComboBox fx:id="ampliconPanelCb" prefWidth="250.0" GridPane.columnIndex="1" />
                                    <Label text="%cnv.importdata.amplicon.lb.matrix" GridPane.rowIndex="1" />
                                    <TextField fx:id="captureMatrixPathTf" editable="false" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Button mnemonicParsing="false" onAction="#importMatrixHandler" text="%cnv.importdata.amplicon.btn.importMatrix" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                    <Button fx:id="importDataBtn" defaultButton="true" mnemonicParsing="false" onAction="#importAmpliconDataHandler" text="%cnv.importdata.amplicon.btn.importData" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                 </children>
                              </GridPane>
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </HBox>
                  </content>
                </Tab>
                <Tab fx:id="captureTab" text="%cnv.importdata.lb.algorithm.covcopcapture">
                  <content>
                      <HBox alignment="TOP_CENTER">
                          <children>
                              <GridPane hgap="5.0" vgap="5.0">
                                  <columnConstraints>
                                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                  </columnConstraints>
                                  <rowConstraints>
                                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                                  </rowConstraints>
                                  <children>
                                      <Label text="%cnv.importdata.capture.lb.panel" />
                                      <ComboBox fx:id="capturePanelCb" prefWidth="250.0" GridPane.columnIndex="1" />
                                      <Label text="%cnv.importdata.capture.lb.windowSize" GridPane.rowIndex="1" />
                                      <Button defaultButton="true" mnemonicParsing="false" onAction="#importCaptureDataHandler" text="%cnv.importdata.capture.btn.importData" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Spinner fx:id="windowSizeSpinner" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                  </children>
                              </GridPane>
                          </children>
                          <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                          </padding>
                      </HBox>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
         </children>
      </VBox>
   </children>
