<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<fx:root spacing="20.0" type="HBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER">
         <children>
            <VBox prefWidth="600.0" spacing="5.0" styleClass="module-box">
               <children>
                  <HBox styleClass="module-box-header">
                     <children>
                        <Label text="%additionaldata.lb.commentaries" />
                        <Region HBox.hgrow="SOMETIMES" />
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#addCommentaryHandler" fx:id="addComentaryBtn" text="%additionaldata.btn.addCommentary" />
                     </children>
                  </HBox>
                  <ListView fx:id="commentariesLv">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </ListView>
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox spacing="5.0" styleClass="module-box" HBox.hgrow="ALWAYS">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label text="%additionaldata.lb.images" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#addImageHandler" fx:id="addImageBtn" text="%additionaldata.btn.importImage" />
               </children>
            </HBox>
            <FlowPane fx:id="imagesFp" hgap="10.0" styleClass="module-box-container" vgap="10.0" />
         </children>
      </VBox>
   </children>
</fx:root>
