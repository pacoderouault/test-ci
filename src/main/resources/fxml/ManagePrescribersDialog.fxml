<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="dialogContainer" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox styleClass="module-box">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label text="%manageprescriberdialog.lb.prescribersList" />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox fx:id="headerBtnContainer" alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#addPrescriber" text="%manageprescriberdialog.btn.addPrescriber" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <VBox styleClass="module-box-container">
               <children>
                  <TableView fx:id="prescribersTable">
                    <columns>
                        <TableColumn fx:id="stateCol" prefWidth="200.0" />
                      <TableColumn fx:id="statusCol" prefWidth="75.0" text="%manageprescriberdialog.col.status" />
                      <TableColumn fx:id="firstNameCol" prefWidth="150.0" text="%manageprescriberdialog.col.firstname" />
                        <TableColumn fx:id="lastNameCol" prefWidth="170.0" text="%manageprescriberdialog.col.lastname" />
                        <TableColumn fx:id="addressCol" prefWidth="250.0" text="%manageprescriberdialog.col.address" />
                        <TableColumn fx:id="actionsCol" prefWidth="100.0" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
