<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<fx:root spacing="10.0" type="HBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="5.0" styleClass="module-box">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label text="%createAnalasisParameters.module.ciq.lb.ciqlist" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#addCIQHandler" text="%createAnalasisParameters.module.ciq.btn.addciq" />
               </children>
            </HBox>
            <VBox spacing="5.0" styleClass="module-box-container" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="ciqModelTableView" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="ciqModelNameCol" prefWidth="200.0" text="%createAnalasisParameters.module.ciq.table.ciqlist.col.name" />
                      <TableColumn fx:id="ciqModelAnalysesNbCol" prefWidth="150.0" text="%createAnalasisParameters.module.ciq.table.ciqlist.col.hotspotsNb" />
                        <TableColumn fx:id="ciqModelActiveCol" prefWidth="150.0" text="%createAnalasisParameters.module.ciq.table.ciqlist.col.active" />
                        <TableColumn fx:id="ciqModelActionCol" prefWidth="75.0" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox spacing="5.0" styleClass="module-box" HBox.hgrow="ALWAYS">
         <children>
            <HBox prefHeight="38.0" styleClass="module-box-header">
               <children>
                  <Label text="%createAnalasisParameters.module.ciq.lb.hotspotslist" />
               </children>
            </HBox>
            <VBox styleClass="module-box-container" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="ciqHotspotTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="ciqHotspotNameCol" prefWidth="150.0" text="%createAnalasisParameters.module.ciq.table.hotspotslist.col.name" />
                        <TableColumn fx:id="ciqHotspotContigCol" prefWidth="100.0" text="%createAnalasisParameters.module.ciq.table.hotspotslist.col.contig" />
                      <TableColumn fx:id="ciqHotspotPositionCol" prefWidth="130.0" text="%createAnalasisParameters.module.ciq.table.hotspotslist.col.position" />
                        <TableColumn fx:id="ciqHotspotRefCol" prefWidth="75.0" text="%createAnalasisParameters.module.ciq.table.hotspotslist.col.ref" />
                        <TableColumn fx:id="ciqHotspotAltCol" prefWidth="75.0" text="%createAnalasisParameters.module.ciq.table.hotspotslist.col.alt" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</fx:root>
