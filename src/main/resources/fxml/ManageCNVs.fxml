<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox layoutX="9.0" layoutY="9.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox styleClass="module-box">
               <children>
                  <HBox alignment="CENTER_LEFT" styleClass="module-box-header">
                     <children>
                        <Label text="%cnvsmanage.lb.managecontrols" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#addControlGroup" styleClass="button-small" text="%cnvsmanage.btn.addControLGroup" />
                     </children>
                  </HBox>
                  <AnchorPane styleClass="module-box-container" VBox.vgrow="ALWAYS">
                     <children>
                        <TableView fx:id="controlGroupTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <columns>
                              <TableColumn fx:id="groupNameCol" prefWidth="150.0" text="%cnvsmanage.col.groupName" />
                              <TableColumn fx:id="groupPanelCol" prefWidth="150.0" text="%cnvsmanage.col.groupPanel" />
                              <TableColumn fx:id="groupAlgorithmCol" prefWidth="120.0" text="%cnvsmanage.col.groupAlgorithm" />
                              <TableColumn fx:id="groupControlSizeCol" prefWidth="100.0" text="%cnvsmanage.col.groupNbcontrols" />
                              <TableColumn fx:id="groupActionsCol" prefWidth="100.0" text="%cnvsmanage.col.groupActions" />
                           </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
            <VBox styleClass="module-box">
               <children>
                  <HBox alignment="CENTER_LEFT" styleClass="module-box-header">
                     <children>
                        <Label text="%cnvsmanage.lb.controlsList" />
                        <Region HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <AnchorPane styleClass="module-box-container" VBox.vgrow="ALWAYS">
                     <children>
                        <TableView fx:id="controlsTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <columns>
                              <TableColumn fx:id="controlNameCol" prefWidth="150.0" text="%cnvsmanage.col.controlName" />
                              <TableColumn fx:id="controlGenderCol" prefWidth="120.0" text="%cnvsmanage.col.controlgender" />
                              <TableColumn fx:id="controlActionsCol" prefWidth="100.0" text="%cnvsmanage.col.controlActions" />
                           </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</fx:root>
