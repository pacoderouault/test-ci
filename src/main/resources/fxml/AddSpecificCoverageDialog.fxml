<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="dialogContainer" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label styleClass="font-medium" text="%addspecificdialog.lb.name" />
            <TextField fx:id="coverageSetNameTf" />
         </children>
      </HBox>
      <VBox styleClass="module-box">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label text="%addspecificdialog.lb.addregion" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_LEFT" spacing="5.0" styleClass="module-box-container">
               <children>
                  <VBox>
                     <children>
                        <Label styleClass="font-medium" text="%addspecificdialog.lb.regionname" />
                        <TextField fx:id="regionNameTf" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label styleClass="font-medium" text="%addspecificdialog.lb.contig" />
                        <TextField fx:id="contigTf" prefWidth="75.0" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label styleClass="font-medium" text="%addspecificdialog.lb.start" />
                        <TextField fx:id="startTf" prefWidth="100.0" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label styleClass="font-medium" text="%addspecificdialog.lb.end" />
                        <TextField fx:id="endTf" prefWidth="100.0" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label styleClass="font-medium" text="%addspecificdialog.lb.minCov" />
                        <TextField fx:id="minCovTf" prefWidth="75.0" />
                     </children>
                  </VBox>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#addRegion" text="%addspecificdialog.btn.addregion">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox styleClass="module-box">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label text="%addspecificdialog.lb.regionlist" />
               </children>
            </HBox>
            <VBox styleClass="module-box-container">
               <children>
                  <TableView fx:id="regionTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="nameCol" prefWidth="150.0" text="%addspecificdialog.lb.regionname" />
                      <TableColumn fx:id="contigCol" prefWidth="100.0" text="%addspecificdialog.lb.contig" />
                        <TableColumn fx:id="startCol" prefWidth="120.0" text="%addspecificdialog.lb.start" />
                        <TableColumn fx:id="endCol" prefWidth="120.0" text="%addspecificdialog.lb.end" />
                        <TableColumn fx:id="minCovCol" prefWidth="150.0" text="%addspecificdialog.lb.minCov" />
                        <TableColumn fx:id="actionsCol" prefWidth="100.0" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
      <Label fx:id="errorLb" styleClass="error-label" />
   </children>
</VBox>
