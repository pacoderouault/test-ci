<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<fx:root spacing="10.0" styleClass="module-box" type="VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox styleClass="module-box-header">
         <children>
            <Label text="%analysisviewreports.reportvous.title" />
         </children>
      </HBox>
      <VBox spacing="10.0" styleClass="module-box-container">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <CheckBox fx:id="dontReportVous" mnemonicParsing="false" styleClass="font-medium" text="%analysisviewreports.reportvous.lb.dontreportvous" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <FlowPane fx:id="filtersContainer" styleClass="module-box-container" vgap="10.0">
               <children>
                  <CheckBox fx:id="filterFalsePositiveCb" mnemonicParsing="false" prefWidth="350.0" text="%exportvariants.lb.fp" />
                  <CheckBox fx:id="filterSynonymousCb" mnemonicParsing="false" prefWidth="350.0" text="%exportvariants.lb.synonymous" />
                  <CheckBox fx:id="filterNonCodingCb" mnemonicParsing="false" prefWidth="350.0" text="%exportvariants.lb.noncoding" />
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="filterVAFCb" mnemonicParsing="false" selected="true" text="%exportvariants.lb.vaf" />
                        <TextField fx:id="filterVafTf" prefWidth="50.0" text="0.20" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="filterDepthCb" mnemonicParsing="false" selected="true" text="%exportvariants.lb.depth" />
                        <TextField fx:id="filterDepthTf" prefWidth="50.0" text="30" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="filterGnomadCb" mnemonicParsing="false" selected="true" text="%exportvariants.lb.gnomadFreq" />
                        <TextField fx:id="filterGnomadTf" prefWidth="50.0" text="0.01" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="filterOccurenceCb" mnemonicParsing="false" selected="true" text="%exportvariants.lb.databaseFreq" />
                        <TextField fx:id="filterOccurenceTf" prefWidth="50.0" text="10" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="filterPathogenicityCb" mnemonicParsing="false" selected="true" text="%exportvariants.lb.pathogenicity" />
                        <ComboBox fx:id="filterPathogenicityCbx" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <HBox fx:id="columnsDropMenuContainer" alignment="CENTER_LEFT" prefWidth="400.0" spacing="5.0" />
               </children>
            </FlowPane>
            <HBox fx:id="tableMenuContainer" alignment="CENTER_LEFT" spacing="5.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <Label styleClass="font-medium" text="%analysisviewreports.reportvous.lb.vouslist" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#fillTable" text="%analysisviewreports.reportvous.btn.resetTable" />
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#removeSelectedVariants" text="%analysisviewreports.reportvous.btn.removeselected" />
               </children>
            </HBox>
            <TableView fx:id="previewTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="geneCol" prefWidth="100.0" text="%analysisviewreports.reportvous.col.gene" />
                <TableColumn fx:id="consequenceCol" prefWidth="150.0" text="%analysisviewreports.reportvous.col.consequence" />
                  <TableColumn fx:id="hgvscCol" prefWidth="200.0" text="%analysisviewreports.reportvous.col.hgvsc" />
                  <TableColumn fx:id="hgvspCol" prefWidth="200.0" text="%analysisviewreports.reportvous.col.hgvsp" />
                  <TableColumn fx:id="vafCol" text="%analysisviewreports.reportvous.col.VAF" />
                  <TableColumn fx:id="depthCol" text="%analysisviewreports.reportvous.col.depth" />
                  <TableColumn fx:id="occurenceCol" prefWidth="75.0" text="%analysisviewreports.reportvous.col.occurence" />
                  <TableColumn fx:id="maxGnomadCol" prefWidth="150.0" text="%analysisviewreports.reportvous.col.gnomad" />
                  <TableColumn fx:id="deleteCol" prefWidth="75.0" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</fx:root>
