<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<fx:root spacing="20.0" type="HBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox styleClass="module-box">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label text="%createAnalasisParameters.module.specificcov.lb.listspecov" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#addNewSpecificCoverageSet" text="%createAnalasisParameters.module.specificcov.btn.addspecov" />
               </children>
            </HBox>
            <VBox styleClass="module-box-container" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="specificCoverageSetTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="specCovNameCol" prefWidth="150.0" text="%createAnalasisParameters.module.specificcov.table.specov.nameCol" />
                      <TableColumn fx:id="specCovNbCol" prefWidth="100.0" text="%createAnalasisParameters.module.specificcov.table.specov.nbCol" />
                        <TableColumn fx:id="specCovActiveCol" prefWidth="75.0" text="%createAnalasisParameters.module.specificcov.table.specov.activeCol" />
                        <TableColumn fx:id="specCovDeleteCol" prefWidth="75.0" text="%createAnalasisParameters.module.specificcov.table.specov.deleteCol" />
                        <TableColumn fx:id="specCovActionsCol" prefWidth="150.0" text=" " />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox styleClass="module-box">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label text="%createAnalasisParameters.module.specificcov.lb.listregions" />
               </children>
            </HBox>
            <VBox styleClass="module-box-container" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="regionsTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="regionNameCol" prefWidth="120.0" text="%createAnalasisParameters.module.specificcov.table.regions.nameCol" />
                      <TableColumn fx:id="regionContigCol" prefWidth="100.0" text="%createAnalasisParameters.module.specificcov.table.regions.contigCol" />
                        <TableColumn fx:id="regionStartCol" prefWidth="130.0" text="%createAnalasisParameters.module.specificcov.table.regions.startCol" />
                        <TableColumn fx:id="regionEndCol" prefWidth="130.0" text="%createAnalasisParameters.module.specificcov.table.regions.endCol" />
                        <TableColumn fx:id="regionMinCovCol" prefWidth="150.0" text="%createAnalasisParameters.module.specificcov.table.regions.minCov" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</fx:root>
