<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<fx:root prefHeight="819.0" prefWidth="1142.0" spacing="10.0" type="VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="5.0" styleClass="module-box">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label text="%exportvariants.lb.filters" />
                  <CheckBox fx:id="disableFiltersCb" mnemonicParsing="false" text="%analysisviewreports.report.anapath.cb.disablefilters">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </CheckBox>
               </children>
            </HBox>
            <FlowPane fx:id="filtersFlowpane" styleClass="module-box-container" vgap="10.0">
               <children>
                  <CheckBox fx:id="filterFalsePositiveCb" mnemonicParsing="false" prefWidth="350.0" text="%exportvariants.lb.fp" />
                  <CheckBox fx:id="filterSynonymousCb" mnemonicParsing="false" prefWidth="350.0" text="%exportvariants.lb.synonymous" />
                  <CheckBox fx:id="filterNonCodingCb" mnemonicParsing="false" prefWidth="350.0" text="%exportvariants.lb.noncoding" />
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="filterVAFCb" mnemonicParsing="false" text="%exportvariants.lb.vaf" />
                        <TextField fx:id="filterVafTf" prefWidth="50.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="filterDepthCb" mnemonicParsing="false" text="%exportvariants.lb.depth" />
                        <TextField fx:id="filterDepthTf" prefWidth="50.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="filterGnomadCb" mnemonicParsing="false" text="%exportvariants.lb.gnomadFreq" />
                        <TextField fx:id="filterGnomadTf" prefWidth="50.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="filterOccurenceCb" mnemonicParsing="false" text="%exportvariants.lb.databaseFreq" />
                        <TextField fx:id="filterOccurenceTf" prefWidth="50.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="filterPathogenicityCb" mnemonicParsing="false" text="%exportvariants.lb.pathogenicity" />
                        <ComboBox fx:id="filterPathogenicityCbx" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <HBox fx:id="columnsDropMenuContainer" alignment="CENTER_LEFT" prefWidth="400.0" spacing="5.0" />
               </children>
            </FlowPane>
            <HBox alignment="CENTER">
               <children>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#exportFile" text="%analysisviewreports.report.anapath.btn.export" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox styleClass="module-box" VBox.vgrow="ALWAYS">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label text="%exportvariants.preview" />
               </children>
            </HBox>
            <HBox styleClass="module-box-container" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="previewTable" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</fx:root>
