<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="dialogContainer" spacing="5.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label fx:id="runNameLb" text="Label">
               <styleClass>
                  <String fx:value="font-medium" />
                  <String fx:value="font-big-size" />
               </styleClass>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="importFromDirBtn" mnemonicParsing="false" text="%importanalysesdialog.btn.addAnalysesFromDir" />
            <Button fx:id="importSingleAnalysisBtn" mnemonicParsing="false" text="%importanalysesdialog.btn.addSingleAnalysis" />
         </children>
      </HBox>
      <TableView fx:id="analysisTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colAnalysisState" prefWidth="35.0" />
            <TableColumn fx:id="colAnalysisName" prefWidth="200.0" text="%importanalysesdialog.table.colAnalysisName" />
          <TableColumn fx:id="colSampleName" minWidth="0.0" prefWidth="170.0" text="%importanalysesdialog.table.colSampleName" />
          <TableColumn fx:id="colVcfFile" prefWidth="200.0" text="%importanalysesdialog.table.colVcf" />
            <TableColumn fx:id="colBamFile" prefWidth="200.0" text="%importanalysesdialog.table.colBam" />
            <TableColumn fx:id="colDepth" prefWidth="200.0" text="%importanalysesdialog.table.colDepth" />
            <TableColumn fx:id="colAnalysisParameters" prefWidth="200.0" sortable="false" text="%importanalysesdialog.table.colPanel" />
            <TableColumn fx:id="colActions" prefWidth="50.0" sortable="false" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
