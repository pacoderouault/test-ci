<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="dialogContainer" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label fx:id="runNameLb" text="Label">
               <styleClass>
                  <String fx:value="font-medium" />
                  <String fx:value="font-big-size" />
               </styleClass>
            </Label>
            <Region HBox.hgrow="NEVER" />
            <Button fx:id="importFromDirBtn" defaultButton="true" mnemonicParsing="false" onAction="#importAnalysesFromDirectory" text="%importanalysesdialog.btn.addAnalysesFromDir" />
            <Button fx:id="importSingleAnalysisBtn" defaultButton="true" mnemonicParsing="false" onAction="#importAnalysesFromFile" text="%importanalysesdialog.btn.addSingleAnalysis" />
         </children>
      </HBox>
      <VBox spacing="5.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5.0" styleClass="module-box-header">
               <children>
                  <Label styleClass="font-medium" text="%importanalysesdialog.title.run" />
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#addRunFile" styleClass="button-action-cell" text="%importanalysesdialog.btn.addRunFile" />
               </children>
            </HBox>
            <FlowPane fx:id="runFilesFp" hgap="5.0" rowValignment="TOP" vgap="5.0" />
         </children>
         <styleClass>
            <String fx:value="module-box" />
            <String fx:value="module-box-container" />
         </styleClass>
      </VBox>
      <VBox spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox styleClass="module-box-header">
               <children>
                  <Label styleClass="font-medium" text="%importanalysesdialog.title.analyses" />
               </children>
            </HBox>
            <TableView fx:id="analysisTable" VBox.vgrow="ALWAYS">
              <columns>
                  <TableColumn fx:id="colAnalysisState" maxWidth="35.0" minWidth="35.0" prefWidth="35.0" />
                  <TableColumn fx:id="colAnalysisName" maxWidth="0.0" minWidth="150.0" prefWidth="300.0" text="%importanalysesdialog.table.colAnalysisName" />
                <TableColumn fx:id="colSampleName" minWidth="150.0" prefWidth="170.0" text="%importanalysesdialog.table.colSampleName" />
                <TableColumn fx:id="colVcfFile" minWidth="100.0" prefWidth="200.0" text="%importanalysesdialog.table.colVcf" />
                  <TableColumn fx:id="colBamFile" minWidth="100.0" prefWidth="200.0" text="%importanalysesdialog.table.colBam" />
                  <TableColumn fx:id="colDepth" minWidth="100.0" prefWidth="200.0" text="%importanalysesdialog.table.colDepth" />
                  <TableColumn fx:id="colAnalysisParameters" minWidth="100.0" prefWidth="200.0" sortable="false" text="%importanalysesdialog.table.colPanel" />
                  <TableColumn fx:id="colCIQ" minWidth="75.0" prefWidth="75.0" text="%importanalysesdialog.table.colCIQ" />
                  <TableColumn fx:id="colActions" minWidth="50.0" prefWidth="50.0" sortable="false" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <styleClass>
            <String fx:value="module-box" />
            <String fx:value="module-box-container" />
         </styleClass>
      </VBox>
   </children>
</VBox>
